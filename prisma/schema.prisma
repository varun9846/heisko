}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Interactive Display IFP50 Series Model
model InteractiveDisplayIFP50 {
  // Unique identifier for each record
  id          Int      @id @default(autoincrement())
  // Timestamp when the record was created
  createdAt   DateTime @default(now())
  // Fields derived from the CSV columns
  title       String   @map("Title") // Product title/name
  description String   @map("Description") // Product description
  image       String   @map("ImageUrl") // Product image URL
}

